{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@database/*": ["src/mastra/database/*"],
        "@agents/*": ["src/mastra/agents/*"],
        "@tools/*": ["src/mastra/tools/*"],
        "@memories/*": ["src/mastra/memories/*"],
        "@workflows/*": ["src/mastra/workflows/*"],
        "@mastra/*": ["src/mastra/*"],
        "@types/*": ["src/mastra/types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  